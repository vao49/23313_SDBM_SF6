{% extends 'base.html.twig' %}

{% block title %}{% trans %}Pays index{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Pays index{% endtrans %}</h1>
    <a href="{{ path('app_pays_new') }}">
       	<button class="btn btn-primary {% trans %}icon new{% endtrans %}">
			{{ button_label|default('Create new')|trans }}
		</button>
    </a>
    <div class="table-responsive">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th class="text-secondary bg-info text-center">{% trans %}Id{% endtrans %}</th>
                    <th class="text-secondary bg-info text-center">{% trans %}NomPays{% endtrans %}</th>
                    <th class="text-secondary bg-info text-center">{% trans %}NomContinent{% endtrans %}</th>
                    <th class="text-secondary bg-info text-center">{% trans %}actions{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
            {% for pay in pays %}
                <tr>
                    <td>{{ pay.id }}</td>
                    <td>{{ pay.nomPays }}</td>
                    <td>{{ pay.continents.nom }}</td>
                    <td>
                        {# <a href="{{ path('app_pays_show', {'id': pay.id}) }}">{% trans %}show{% endtrans %}</a> #}
                        <a href="{{ path('app_pays_edit', {'id': pay.id}) }}">
                            <button class="btn btn-secondary btn-sm {% trans %}icon edit{% endtrans %}">
                                    {{ button_label|default('edit')|trans }}
                            </button>
                        </a>
                        {{ include('pays/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{% trans %}no records found{% endtrans %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    
{% endblock %}
