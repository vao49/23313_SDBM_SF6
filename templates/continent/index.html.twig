{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Liste des Continents{% endtrans %}
{% endblock %}

{% block body %}
	<h1>{% trans %}Liste des Continents{% endtrans %}</h1>
	<a href="{{ path('app_continent_new') }}">
		<button class="btn btn-primary {% trans %}icon new{% endtrans %}">
			{{ button_label|default('Create new')|trans }}
		</button>
	</a>
	<div class="table-responsive">
		<table class="table table-dark table-hover">
			<thead>
				<tr>
					<th class="text-secondary bg-info text-center">{% trans %}IdContinent{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}NomContinent{% endtrans %}</th>
					<th class="text-secondary bg-info text-center">{% trans %}actions{% endtrans %}</th>
				</tr>
			</thead>
			<tbody>
				{% for continent in continents %}
					<tr class="text-center">
						<td class="text-center">{{ continent.id }}</td>
						<td class="text-center">{{ continent.nom }}</td>
						<td class="text-center">
							<a href="{{ path('app_continent_edit', {'id': continent.id}) }}">
								<button class="btn btn-secondary btn-sm {% trans %}icon edit{% endtrans %}">
									{{ button_label|default('edit')|trans }}
								</button>
							</a>
							{{ include('continent/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">{% trans %}no records found{% endtrans %}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}

 
