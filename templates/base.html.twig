<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<!-- Bootstrap 5 Latest compiled and minified CSS -->
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
		<!-- Bootstrap icons CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"> {% block stylesheets %}{% endblock %}


		<!-- Bootstrap 5 Latest compiled JavaScript -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
	<header>
		<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('app_main') }}">Logo</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
				<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="collapsibleNavbar">
					<ul class="navbar-nav">
						<li class="nav-item">
						<a class="nav-link" href="{{ path('app_continent_index') }}">Continents</a>
						</li>
						<li class="nav-item">
						<a class="nav-link" href="{{ path('app_pays_index') }}">Pays</a>
						</li>
						<li class="nav-item">
						<a class="nav-link" href="#">Link</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-bs-toggle="dropdown">
								{% trans %}langues{% endtrans %}
							</a>	
							<div class="dropdown-menu">
								<a class="dropdown-item" href="{{path('app_langue_francais')}}">
									<img src="{{asset('images/francais.png')}}" class="rounded" alt="Français"/>
									{% trans %}français{% endtrans %}
								</a>
								<a class="dropdown-item" href="{{path('app_langue_anglais')}}">
									<img src="{{asset('images/english.png')}}" class="rounded" alt="English"/>
									{% trans %}anglais{% endtrans %}
								</a>
								<a class="dropdown-item" href="{{path('app_langue_espagnol')}}">
									<img src="{{asset('images/espagnol.png')}}" class="rounded" alt="Espagnol"/>
									{% trans %}espagnol{% endtrans %}
								</a>
							</div>
						</li>
						
						
					</ul>
				</div>
				{# <div class="collapse navbar-collapse justify-content-end">
					<ul class="navbar-nav ">
						<li class="nav-item">
							<img    src="{% trans %}drapeau{% endtrans %}" class="rounded" alt="drapeau"/>
						</li>
					</ul>
				</div> #}
			</div>
		</nav>
	</header>
		<div <div class="container-fluid"> 
			{% block body %} {% endblock %} 
		</div> 
	</body> 
</html>
